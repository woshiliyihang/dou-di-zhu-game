<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/pai_hang"
            android:gravity="bottom|center_horizontal"
            android:layout_marginLeft="17dp"
            android:layout_width="wrap_content"
            android:background="@drawable/scoreboard"
            android:layout_height="wrap_content">


            <ListView
                android:divider="@null"
                android:layout_marginBottom="27dp"
                android:id="@+id/pai_hang_list"
                android:layout_width="220dp"
                android:layout_height="100dp">

            </ListView>



        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/my_pai_ming"
            android:gravity="center"
            android:textColor="@color/ao_hong"
            android:layout_marginTop="20dp"
            android:textSize="21sp"
            android:layout_marginLeft="64dp"
            android:layout_below="@+id/pai_hang"
            android:text="我的排名\n1120名"
            android:layout_width="wrap_content"
            android:background="@drawable/btn1"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/user_info_img"
            android:layout_alignParentRight="true"
            android:layout_marginRight="34dp"
            android:layout_width="wrap_content"
            android:background="@drawable/player_info"
            android:layout_height="wrap_content" />



        <LinearLayout
            android:id="@+id/two_view"
            android:visibility="gone"
            android:layout_below="@+id/user_info_img"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/pai_hang"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nichengview"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:text="昵称：哈哈"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/jinbiview"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:text="金币：15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/jifenview"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:text="积分：185"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/loginout"
                android:layout_marginTop="10dp"
                android:textSize="24sp"
                android:text="退出账户"
                android:textColor="@color/ao_hong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/one_view"
            android:layout_below="@+id/user_info_img"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/pai_hang"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/name"
                android:hint="请输入用户名"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <requestFocus />

            </EditText>

            <EditText
                android:id="@+id/passwd"
                android:hint="请输入密码"
                android:inputType="numberPassword"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_marginLeft="34dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/login"
                    android:text="登录"
                    android:background="@null"
                    android:textColor="@color/ao_hong"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/reg"
                    android:text="注册"
                    android:background="@null"
                    android:textColor="@color/ao_hong"
                    android:textSize="24sp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>




        </LinearLayout>


        <Button
            android:id="@+id/intogame"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn2"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="7dp"
            android:text="进入游戏"
            android:textSize="34sp"
            android:textColor="@color/ao_hong"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>


</LinearLayout><!-- From: file:/D:/androidsource/cocos2d-android1/app/src/main/res/layout/yin_dao_xml.xml -->